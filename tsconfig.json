{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "node"
    ],
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@icons/*": [
        "./src/assets/images/icons/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}